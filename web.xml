<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Exam Seating Arrangement System</display-name>

    <!-- Hibernate Session Factory -->
    <context-param>
        <param-name>hibernateSessionFactory</param-name>
        <param-value>com.examseating.util.HibernateUtil</param-value>
    </context-param>

    <!-- JWT Configuration -->
    <context-param>
        <param-name>jwtSecret</param-name>
        <param-value>your-secret-key-here</param-value>
    </context-param>

    <!-- WebSocket Configuration -->
    <context-param>
        <param-name>websocketEndpoint</param-name>
        <param-value>com.examseating.websocket.WebSocketConfig</param-value>
    </context-param>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Security Constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/staff/*</url-pattern>
            <url-pattern>/api/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>staff</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- CORS Filter -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.examseating.filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- JWT Authentication Filter -->
    <filter>
        <filter-name>JwtAuthenticationFilter</filter-name>
        <filter-class>com.examseating.filter.JwtAuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JwtAuthenticationFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
</web-app> 